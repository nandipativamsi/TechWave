@model IEnumerable<TechWave.Models.DomainModel.Product>

@{
    ViewData["Title"] = "Manage Products";
}

<h1 class="manage-products-title">Manage Products</h1>
<a asp-action="Add" class="btn manage-products-add-btn">Add Product</a>

<table class="table manage-products-table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Category</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Category.Name</td>
                <td>@product.Price.ToString("C")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@product.ProductID" class="btn manage-products-edit-btn">Edit</a>
                    <form method="post" asp-action="Delete" asp-route-id="@product.ProductID" style="display:inline;">
                        <button type="submit" class="btn manage-products-delete-btn">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
