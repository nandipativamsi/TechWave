@model TechWave.Models.ViewModel.LoginViewModel
@{
    ViewBag.Title = "Login";
}

<style>
    body, html {
        height: 100%;
        margin: 0;
        display: flex;
        flex-direction: column;
    }

    .content-wrapper {
        flex: 1;
        display: flex;
        margin-top:100px;
        justify-content: center;
        align-items: center;
        background-color: #ffffff;
        margin-bottom: 100px;
    }

    .login-container {
        background-color: #ffffff;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 400px;
    }

        .login-container h2 {
            margin-bottom: 20px;
            text-align: center;
        }

    .btn-primary {
        width: 100%;
    }

    nav, footer {
        background-color: #343a40;
        color: #fff;
        padding: 10px;
        text-align: center;
    }

</style>



<div class="content-wrapper">
    <div class="login-container">
        <h2>Login</h2>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <form method="post" asp-action="LogIn" asp-route-returnUrl="@Model.ReturnUrl">
            <div class="mb-3">
                <label class="form-label">Email:</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Password:</label>
                <input type="password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary w-100">Log In</button>
            <a asp-action="Index" asp-controller="Home" class="btn btn-secondary w-100 mt-2">Cancel</a>

            <div class="mt-3 text-center">
                Not registered? <a asp-action="Register">Register as a new user</a>
            </div>
        </form>
    </div>
</div>