@model TechWave.Models.DomainModel.Product

@{
    ViewData["Title"] = "Product Details";
}

<h2>@Model.Name</h2>

<div class="row">
    <div class="col-md-6">
        <img src="@Url.Content(Model.ImageURL)" alt="@Model.Name" class="img-fluid" style="height: 400px; width: 100%; object-fit: cover;">
    </div>
    <div class="col-md-6">
        <h3>@Model.Name</h3>
        <p><strong>Brand:</strong> @Model.Brand</p>
        <p><strong>Description:</strong> @Model.Description</p>
        <p><strong>Specifications:</strong> @Model.Specifications</p>
        <p><strong>Price:</strong> $@Model.Price</p>
        <p><strong>Category:</strong> @Model.Category?.Name</p>
        <p><strong>Long Description:</strong> @Model.LongDescription</p>

        <form asp-action="AddToCart" method="post">
            <input type="hidden" name="productId" value="@Model.ProductID" />
            <label for="quantity" class="mr-2">Quantity:</label>
            <select name="quantity" class="form-select" aria-label="Quantity" style="width: 60px;">
                @for (int i = 1; i <= 5; i++)
                {
                    <option value="@i">@i</option>
                }
            </select>
            <button type="submit" class="btn btn-success mt-2">Add to Cart</button>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Products" class="btn btn-primary">Back to Products</a>
</div>
