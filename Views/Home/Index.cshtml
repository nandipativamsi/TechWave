@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<div class="hero-image">
    <h1 class="display-4">Welcome to TechWave</h1>
    <p>Your one-stop shop for the latest tech gadgets and accessories.</p>
    <a href="#products" class="btn btn-light btn-lg mt-4">Shop Now</a>
</div>

<!-- Products Section -->
<div class="container mt-5" id="products">
    <h2 class="text-center mb-5">Featured Products</h2>
    <div class="row">
        <!-- Product 1 -->
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <img class="card-img-top" src="~/images/iphone-14.jpg" alt="Product 1"
                     style="width: 100%; height: 400px; object-fit: fill; background-color: #f8f9fa;">
                <div class="card-body text-center">
                    <h5 class="card-title">Product 1</h5>
                    <p class="card-text">Latest Apple smartphone with advanced features.</p>
                    <a href="@Url.Action("Products", "Products")" class="btn btn-primary">View More</a>
                </div>
            </div>
        </div>

        <!-- Product 2 -->
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <img class="card-img-top" src="~/images/ipad-pro.jpg" alt="Product 2"
                     style="width: 100%; height: 400px; object-fit: fill; background-color: #f8f9fa;">
                <div class="card-body text-center">
                    <h5 class="card-title">Product 2</h5>
                    <p class="card-text">12.9-inch tablet with high resolution.</p>
                    <a href="@Url.Action("Products", "Products")" class="btn btn-primary">View More</a>
                </div>
            </div>
        </div>

        <!-- Product 3 -->
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <img class="card-img-top" src="~/images/airpods-pro.jpg" alt="Product 3"
                     style="width: 100%; height: 300px; object-fit: fill; background-color: #f8f9fa; margin-top: 80px;">

                <div class="card-body text-center">
                    <h5 class="card-title">Product 3</h5>
                    <p class="card-text">Wireless earbuds with noise cancellation.</p>
                    <a href="@Url.Action("Products", "Products")" class="btn btn-primary">View More</a>
                </div>
            </div>
        </div>
    </div>
</div>

</div>
